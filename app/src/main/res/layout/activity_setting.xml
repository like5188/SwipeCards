<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大子视图数量：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预取数据阈值：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y轴偏移步进(像素)：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩放步进[0f,1f]：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.08" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指定缩放达到最大的滑动进度[0f,1f]：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.75" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画时长(毫米)：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大旋转角度(卡片右上角滑动到卡片最左边时的角度)：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="边界阈值(超过此值，放开手指会自动滑出)：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否支持手指滑动：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回退栈大小：" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2" />
        </LinearLayout>
    </LinearLayout>
</layout>

